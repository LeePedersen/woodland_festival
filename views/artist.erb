<h1>Add a new Artist</h1>

<form action="/stages/<%= @stage.id %>/artists" method="post">
  <div class="form-group">
    <label for="artist_name">Artist name</label>
    <input id="artist_name" name="artist_name" class="form-control" type="text">
    <label for="artist_genre">Artist genre</label>
    <input id="artist_genre" name="artist_genre" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Book!</button>
</form>
